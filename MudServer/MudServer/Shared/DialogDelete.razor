<MudMessageBox @ref="mbox" Title="Richiesta Conferma" CancelText="Annulla">
    <MessageContent>
        Sei Sicuro di voler Eliminare questo Record ?
    </MessageContent>
    <YesButton>
        <MudButton Variant="Variant.Filled" Color="Color.Error" StartIcon="@Icons.Material.Filled.DeleteForever">Si, Elimina!</MudButton>
    </YesButton>
</MudMessageBox>
@code
{
    MudMessageBox mbox { get; set; }
   

    private async void OnButtonClicked()
    {
        bool? result = await mbox.Show();
      
        StateHasChanged();
    }
}
