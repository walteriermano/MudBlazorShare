@using MudServer.ViewModels
<MudDialog>
    <DialogContent>
        @foreach (var item in Inputs)
        {
            if (item.Type=="string")
            {
                <MudTextField T="string" Value="@item.Input" Label="@item.Label"></MudTextField>
            }
        }
             
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@CancelText</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">@OkText</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    
    [Parameter] public List<InputDialogViewModel> Inputs { get; set; } 
   
    [Parameter] public string CancelText { get; set; } = "";
    [Parameter] public string OkText { get; set; } = "";
    [Parameter] public string Selected { get; set; } = "";

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}
